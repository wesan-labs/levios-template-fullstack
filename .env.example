# --- Backend (apps/backend/.env) ---

# Database: Local PostgreSQL or Supabase connection string
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/levios-store

# Supabase (only if using Supabase as DB provider)
# SUPABASE_URL=https://xxx.supabase.co
# SUPABASE_SERVICE_KEY=eyJhbGci...

# Redis
REDIS_URL=redis://localhost:6379

# CORS
STORE_CORS=http://localhost:3000
ADMIN_CORS=http://localhost:5173,http://localhost:9000
AUTH_CORS=http://localhost:3000,http://localhost:5173,http://localhost:9000

# Secrets
JWT_SECRET=supersecret-change-in-production
COOKIE_SECRET=supersecret-change-in-production

# --- Storefront (apps/storefront/.env.local) ---

# Required for store API and middleware
# NEXT_PUBLIC_LEVIOS_BACKEND_URL=http://localhost:9000
# NEXT_PUBLIC_LEVIOS_PUBLISHABLE_KEY=pk_...

# Optional: default region for middleware (e.g. us, gb)
# NEXT_PUBLIC_DEFAULT_REGION=us

# Optional: Stripe Connect account ID for payment provider
# NEXT_PUBLIC_LEVIOS_PAYMENTS_ACCOUNT_ID=acct_...
